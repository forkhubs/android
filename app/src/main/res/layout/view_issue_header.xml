<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_issue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        tools:text="Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_issue_author"
            style="@style/ListSubtitleText"
            android:maxLines="1"
            android:textColor="@color/inset_outer"
            android:textIsSelectable="true"
            android:textStyle="bold"
            tools:text="StefMa"/>

        <TextView
            android:id="@+id/tv_issue_author_date_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/inset_outer"
            tools:text=" "/>

        <TextView
            android:id="@+id/tv_issue_creation_date"
            style="@style/ListSubtitleText"
            android:maxLines="1"
            android:textColor="@color/inset_outer"
            tools:text="opened 6 hours ago"/>

        <TextView
            android:id="@+id/tv_issue_date_comments_separator"
            style="@style/ListSubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/inset_outer"
            tools:text=" Â· "/>

        <TextView
            android:id="@+id/tv_issue_comments_count"
            style="@style/ListSubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/inset_outer"
            tools:text="1 comment"/>
    </LinearLayout>

</merge>
